# Side-by-side bar chart maker
doublebar_1 = lambda y_values1, bar_adjust: [2*element + (0.8 + bar_adjust) * 1 for element in range(len(y_values1))]
doublebar_2 = lambda y_values2, bar_adjust: [2*element + (0.8 + bar_adjust) * 2 for element in range(len(y_values2))]
